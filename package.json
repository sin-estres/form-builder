{
    "name": "form-builder-pro",
    "version": "1.0.6",
    "description": "A production-grade Drag & Drop Form Builder",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "vite",
        "build": "tsup && npm run build:css",
        "build:css": "postcss src/index.css -o dist/index.css --no-map && rm -f dist/index.css.map",
        "test": "vitest",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview"
    },
    "keywords": [
        "form-builder",
        "drag-and-drop",
        "vanilla-js",
        "typescript",
        "angular",
        "react",
        "vue"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/sortablejs": "^1.15.9",
        "autoprefixer": "^10.4.14",
        "clsx": "^1.2.1",
        "jsdom": "^27.2.0",
        "lucide": "^0.555.0",
        "postcss": "^8.4.24",
        "postcss-cli": "^11.0.1",
        "sortablejs": "^1.15.6",
        "tailwind-merge": "^1.13.2",
        "tailwindcss": "^3.3.2",
        "tsup": "^7.1.0",
        "typescript": "^5.0.2",
        "vite": "^4.3.9",
        "vitest": "^0.32.0",
        "zod": "^3.21.4",
        "zustand": "^4.3.8"
    }
}