          "id": "field-validation-date-range-001",
          "type": "date",
          "label": "Date Range",
          "placeholder": "Select date between range",
          "width": "50%",
          "required": true,
          "enabled": true,
          "visible": true,
          "validation": [
            {
              "type": "minDate",
              "value": "2024-01-01",
              "message": "Date must be after 2024-01-01"
            },
            {
              "type": "maxDate",
              "value": "2024-12-31",
              "message": "Date must be before 2024-12-31"
            }
          ]
        },
